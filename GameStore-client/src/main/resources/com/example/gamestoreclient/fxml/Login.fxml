<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.gamestoreclient.controllers.LoginController"
            prefHeight="400.0" prefWidth="600.0"
            stylesheets="">
    <center>
        <VBox alignment="CENTER" spacing="20" styleClass="login-container">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <Label text="Game Store Login" styleClass="title-label"/>

            <GridPane hgap="10" vgap="10" alignment="CENTER">
                <Label text="Email:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="emailField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Password:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <PasswordField fx:id="passwordField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
            </GridPane>

            <HBox spacing="10" alignment="CENTER">
                <Button text="Login" onAction="#handleLogin" styleClass="primary-button"/>
                <Button text="Register" onAction="#handleRegister" styleClass="secondary-button"/>
            </HBox>

            <Label fx:id="errorLabel" styleClass="error-label" visible="false"/>
        </VBox>
    </center>
</BorderPane>
