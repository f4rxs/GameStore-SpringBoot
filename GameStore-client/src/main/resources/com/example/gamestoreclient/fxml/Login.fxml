<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.gamestoreclient.controllers.LoginController"
            prefHeight="600.0" prefWidth="900.0"
            stylesheets="@../styles/styles.css"
            style="-fx-background-color: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">

    <center>
        <VBox alignment="CENTER" spacing="24" styleClass="login-container">
            <padding>
                <Insets top="40" right="40" bottom="40" left="40"/>
            </padding>

            <!-- Logo/Title Section -->
            <VBox alignment="CENTER" spacing="8">
                <Label text="ðŸŽ®" style="-fx-font-size: 48px;"/>
                <Label text="Game Store" styleClass="title-label"/>
                <Label text="Welcome back! Please sign in to your account."
                       style="-fx-text-fill: #64748b; -fx-font-size: 14px;"/>
            </VBox>

            <!-- Form Section -->
            <VBox spacing="20" style="-fx-min-width: 350px;">
                <VBox spacing="8">
                    <Label text="Email Address" style="-fx-text-fill: #374151; -fx-font-weight: 600;"/>
                    <TextField fx:id="emailField" promptText="Enter your email address"
                               style="-fx-pref-height: 45px;"/>
                </VBox>

                <VBox spacing="8">
                    <Label text="Password" style="-fx-text-fill: #374151; -fx-font-weight: 600;"/>
                    <PasswordField fx:id="passwordField" promptText="Enter your password"
                                   style="-fx-pref-height: 45px;"/>
                </VBox>
            </VBox>

            <!-- Buttons Section -->
            <VBox spacing="16" alignment="CENTER" style="-fx-min-width: 350px;">
                <Button text="Sign In" onAction="#handleLogin" styleClass="primary-button"
                        style="-fx-pref-width: 350px; -fx-pref-height: 45px; -fx-font-size: 16px;"/>

                <HBox alignment="CENTER" spacing="8">
                    <Label text="Don't have an account?" style="-fx-text-fill: #64748b;"/>
                    <Button text="Create Account" onAction="#handleRegister"
                            style="-fx-background-color: transparent; -fx-text-fill: #3b82f6; -fx-underline: true; -fx-cursor: hand;"/>
                </HBox>
            </VBox>

            <Label fx:id="errorLabel" styleClass="error-label" visible="false"
                   style="-fx-background-color: #fee2e2; -fx-padding: 12px; -fx-background-radius: 8px;"/>
        </VBox>
    </center>
</BorderPane>
