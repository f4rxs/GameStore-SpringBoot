<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.gamestoreclient.controllers.GamesController"
      spacing="10" styleClass="content-container">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Game Store" styleClass="section-title"/>
        <Region HBox.hgrow="ALWAYS"/>
        <ComboBox fx:id="genreFilter" promptText="Filter by Genre"/>
        <TextField fx:id="searchField" promptText="Search games..."/>
        <Button text="Search" onAction="#handleSearch"/>
    </HBox>

    <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS">
        <GridPane fx:id="gamesGrid" hgap="20" vgap="20">
            <!-- Games will be loaded here dynamically -->
        </GridPane>
    </ScrollPane>
</VBox>
